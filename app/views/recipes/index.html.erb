<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>  
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{recipe.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{recipe.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%=recipe.name %>
          </span>
        </td>
        <td><%= recipe.method %></td>
          <td><%= link_to 'Show', recipe, class:"btn btn-light"%></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class:"btn btn-light" %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>

<%= link_to new_recipe_path, class: 'btn btn-light btn-outline-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Recipe
<% end %>
  

    




